<% provide(:title, "Вхід у систему") %>
<h1>Вхід у систему</h1>
<div class="row">
  <div class="span6 offset3">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
    <%= yield %>
    <%= form_for(:session, url: sessions_path) do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email %>

    <%= f.label :password, 'Пароль' %>
    <%= f.password_field :password %>

    <%= f.submit "Увійти", class: "btn btn-large btn-primary"%>
    <br>
    <br>
    <p>Новий користувач? <%= link_to "Зареєструватись зараз!", signup_path %></p>
    <br>
    <br>
<% end %>
  </div>
</div>
